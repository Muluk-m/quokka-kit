{
  "name": "klook-infra-tools",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.5",
  "description": "A collection of modern high-performance tools",
  "author": "Muluk ma<muluk.ma@klook.com>",
  "license": "MIT",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+https://git.klook.io/web-infra/klook-infra-tools.git"
  },
  "bugs": {
    "url": "https://git.klook.io/web-infra/klook-infra-tools.git/issues"
  },
  "keywords": [
    "tools",
    "build",
    "esbuild",
    "infra"
  ],
  "engines": {
    "node": ">=18.19.0"
  },
  "scripts": {
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" nr prepare:type && nr build:ui && turbo stub --concurrency 20",
    "build": "turbo build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "release:build": "pnpm -C packages/build release",
    "prepare": "simple-git-hooks || true",
    "prepublishOnly": "bash ./bin/prepublishOnly.sh",
    "test": "vitest --environment jsdom",
    "play": "turbo dev --filter=./packages/playground/basic",
    "docs:build": "vitepress build docs",
    "docs:dev": "vitepress dev docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@klook/quokka-build": "workspace:*",
    "@klook/quokka-standard": "^0.0.13",
    "@types/node": "^20.12.3",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.0",
    "turbo": "^1.13.0",
    "typescript": "~5.4.3",
    "vitepress": "^1.1.0",
    "vitepress-plugin-search": "^1.0.4-alpha.22",
    "vitest": "1.4.0",
    "vue": "3.4.21"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm quokka-standard commitlint"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "commitlint": {
    "extends": [
      "@klook/quokka-standard/commitlint.config"
    ]
  }
}
