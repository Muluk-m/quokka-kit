{
  "name": "@nain/quokka-build",
  "version": "0.0.8",
  "description": "âš¡ Fast package builder, powered by esbuild",
  "author": "nain.ma<maqiqian0316@gmail.com>",
  "license": "MIT",
  "homepage": "https://npm.io/-/web/detail/@nain/quokka-build",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Muluk-M/quokka-kit.git"
  },
  "bugs": {
    "url": "https://github.com/Muluk-M/quokka-kit/issues"
  },
  "keywords": [
    "pnpm",
    "esbuild",
    "build"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "dev": "./src/index.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./config": {
      "dev": "./src/config.ts",
      "import": "./dist/config.mjs",
      "require": "./dist/config.js"
    },
    "./cli": {
      "dev": "./src/cli.ts",
      "import": "./dist/cli.mjs",
      "require": "./dist/cli.js"
    },
    "./*": "./*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./*"
      ]
    }
  },
  "bin": {
    "quokka-build": "dist/cli.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "dev": "tsx ./src/cli.ts --watch",
    "test": "vitest",
    "build": "tsx ./src/cli.ts",
    "lint": "run-s lint:**",
    "release": "bumpp",
    "lint:eslint": "TIMING=1 eslint \"*.{js,jsx,ts,tsx,md,json}\" --fix",
    "clean": "run-p clean:**",
    "clean:cache": "rimraf .turbo && rimraf dist",
    "clean:deps": "rimraf node_modules"
  },
  "peerDependencies": {
    "vue-template-compiler": "^2"
  },
  "peerDependenciesMeta": {
    "vue-template-compiler": {
      "optional": true
    }
  },
  "dependencies": {
    "@vue/component-compiler": "catalog:",
    "@vue/component-compiler-utils": "catalog:",
    "citty": "catalog:",
    "defu": "catalog:",
    "esbuild-sass-plugin": "catalog:",
    "hash-sum": "catalog:",
    "local-pkg": "^0.4.2",
    "magic-string": "catalog:",
    "tsup": "catalog:",
    "unconfig": "catalog:"
  },
  "devDependencies": {
    "@types/hash-sum": "catalog:",
    "tsx": "catalog:",
    "vue": "2.6.11",
    "vue-template-compiler": "catalog:"
  }
}
