{
  "compilerOptions": {
    "target": "es2018",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/**/*.js"
  ]
}
